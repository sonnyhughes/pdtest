   <body>
      {{!-- HEADER --}}
      <header>
         <div class="navbar navbar-default navbar-static-top">
            <div class="container">
               <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand">Study Hall</a>
               </div>
               <div class="navbar-collapse collapse ">
                  <ul class="nav navbar-nav welcome-style">
                     {{#if user}}
                     <li class="active"><a href="/">Home</a></li>
                     <li><a href="/account">Account</a></li>
                     {{!-- <li><a href="/past">Expired Events</a></li> --}}
                     <li><a href="/logout">Log Out</a></li>
                     <h4 class="hello">Hello, {{user.displayName}}</h4>
                     {{else}}
                     <li class="active"><a href="/">Home</a></li>
                     {{!-- <li><a href="/past">Expired Events</a></li> --}}
                     <li><a href="/auth/github/callback">Login With Github</a></li>
                     <h4 class="welcome"></h4>
                     {{/if}}
                     {{msg}}
                  </ul>
               </div>
            </div>
         </div>
      </header>
      {{!-- END HEADER --}}

   {{!-- CALL TO ACTION --}}
  <section class="callaction">
    <div class="container">
      <div class="row">
        {{!-- EVENT INPUT --}}
               <div class="col-lg-6">
                  <div class="big-cta">
                     <div class="cta-text">
                        <h2><span>Study Hall</span> </h2>
                     </div>
                     <form class="form-horizontal" method="POST" action="/add/" class="button-size">
                        <fieldset>
                           <legend class="text-center col-lg-12">Submit a Study Group Topic or Networking Event</legend>
                           <br>
                           <div class="form-group">
                              <div class="col-lg-8 col-lg-offset-2">
                                 <textarea placeholder="Submit Your Study Group Idea Here!" type="text" name="body" maxlength="140" minlength="2" class="form-control" required></textarea>
                                 <br>
                              </div>
                              <div class="col-lg-4 col-lg-offset-4">
                                 <input placeholder="Membership Minimum" type="number" min='2' max='5' name="groupLimit" class="form-control input-styling" required>
                              </div>
                           </div>
                           <div class="form-group">
                              <center><div class="col-lg-12">
                                 <button type="submit" class="btn btn-success">Create a Group Now!</button>
                              </div></center>
                           </div>
                        </fieldset>
                     </form>
                  </div>
               </div>
                <div class="col-lg-6">
                  <div class="row">
                    {{#each posts}} {{#unless capacity}}
                    <div class="col-lg-3" id="postBox">
                      <center>
                        <img src="{{pictureUrl}}" height="100" width="100">
                      </center>
                      <center>
                        <h6>Study Group Organizer: {{user}}</h6>
                      </center>
                      <center>
                        <h6>Max Users: {{groupLimit}}</h6>
                      </center>
                      <p>
                        <form action="/post/join" method="POST" class="join">
                          <input type="hidden" name="postId" value="{{this.id}}">
                          <input type="hidden" name="groupLimit" value="{{this.groupLimit}}">
                          <input type="hidden" name="capacity" value="false">
                          <div class="box-bottom">
                            <button type="submit" id="build" margin="20px" class="btn btn-success">âž• Join Up!</button>
                          </div>
                        </form>
                      </p>
                      <div class="box">
                        <div class="box-gray aligncenter">
                          <div class="icon">
                            {{body}} {{number}}
                          </div>
                        </div>
                      </div>
                    </div>
                    {{/unless}} {{/each}}
                  </div>
                </div>
            </div>
      </section>


{{!-- EVENTS CONTAINER --}}
<section id="content"></section>

{{!-- FOOTER --}}
