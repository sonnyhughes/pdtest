   <body>
      <!-- start header -->
      <header>
         <div class="navbar navbar-default navbar-static-top">
            <div class="container">
               <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand"><span>S</span>andbox</a>
               </div>
               <div class="navbar-collapse collapse ">
                  <ul class="nav navbar-nav">
                     {{#if user}}
                     <li class="active"><a href="/">Home</a></li>
                     <li><a href="/account">Account</a></li>
                     <li><a href="#">Past Projects</a></li>
                     <li><a href="/logout">Log Out</a></li>
                     <h4 class="hello">Hello, {{user.displayName}}</h4>
                     {{else}}
                     <li class="active"><a href="/">Home</a></li>
                     <li><a href="#">Past Projects</a></li>
                     <li><a href="/login">Login</a></li>
                     <h4 class="welcome">Welcome! Please log in.</h4>
                     {{/if}}
                     {{msg}}
                  </ul>
               </div>
            </div>
         </div>
      </header>
      <!-- End Header -->
      <!-- Start of carousel -->
      <div class="container">
         <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
               <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
               <li data-target="#myCarousel" data-slide-to="1"></li>
               <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
               <div class="item active">
                  <img src="/assets/img/slides/img2.jpg" width="100%" alt="">
                  <div class="flex-caption">
                    <h3>EXPLORE</h3>
                    <p>Explore projects, join a team and begin! It's that simple.</p>
                  </div>
               </div>
               <div class="item">
                  <img src="/assets/img/slides/img1.jpeg" width="100%" alt="">
                  <div class="flex-caption">
                    <h3>INNOVATE</h3>
                    <p>Put your skills to work and start building!</p>
                  </div>
               </div>
               <div class="item">
                  <img src="/assets/img/slides/img3.jpeg" width="100%" alt="">
                  <div class="flex-caption">
                    <h3>CONNECT</h3>
                    <p>Be part of a community passionate about web development.</p>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- End of carousel -->
      <!-- Second Header Section -->
      <section class="callaction">
         <div class="container">
            <div class="row">
               <!-- Inputting Idea -->
               <div class="col-lg-6 col-lg-offset-3">
                  <div class="big-cta">
                     <div class="cta-text">
                        <h2><span>Sandbox</span> </h2>
                     </div>
                     <form class="form-horizontal" method="POST" action="/add/" class="button-size">
                        <fieldset>
                           <legend class="text-center col-lg-12">Write Your Idea</legend>
                           <br>
                           <div class="form-group">
                              <div class="col-lg-8 col-lg-offset-2">
                                 <textarea placeholder="Enter Idea" type="text" name="body" maxlength="140" minlength="2" class="form-control" required></textarea>
                                 <br>
                              </div>
                              <div class="col-lg-4 col-lg-offset-4">
                                 <input placeholder="# Needed" type="number" min='2' max='5' name="groupLimit" class="form-control" required>
                              </div>
                           </div>
                           <div class="form-group">
                              <center><div class="col-lg-6 col-lg-offset-3">
                                 <button type="submit" class="btn btn-success">Idea!</button>
                              </div></center>
                           </div>
                        </fieldset>
                     </form>
                  </div>
               </div>
            </div>
      </section>


<!-- All Ideas Section -->
<section id="content">
   <!-- For each post, create a div col-lg-3 -->
   <div class="container">
      <div class="row">
         <div class="col-lg-12">
            <div class="row">
            {{#each posts}}
               <div class="col-lg-3">
                  <p>
                  <form action="/post/join" method="POST" class="join">
                     <input type="hidden" name="postId" value="{{this.id}}">
                     <input type="hidden" name="groupLimit" value="{{this.groupLimit}}">
                     <div class="box-bottom">
                        <button type="submit" id="build" margin="20px" class="btn btn-success">Build this Idea</button>
                     </div>
                  </form>
                  </p>
                  <div class="box">
                     <div class="box-gray aligncenter">
                        <div class="icon">
                           {{body}}
                           {{number}}
                        </div>
                     </div>
                  </div>
               </div>
               {{/each}}
            </div>
         </div>
      </div>
   </div>
</section>


